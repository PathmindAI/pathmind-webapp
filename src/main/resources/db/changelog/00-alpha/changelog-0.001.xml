        </insert>

        <insert tableName="PATHMIND_USER">
            <column name="NAME" value="Bob"/>
            <column name="EMAIL" value="bob@skymind.io"/>
            <column name="PASSWORD" value="password"/>
        </insert>

    </changeSet>
</databaseChangeLog>