        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet author="admin" id="3">

        <!-- Since there should be no test data anyways I'll save the time of trying to move it down a layer -->
        <!-- Deleting data as well so that all the ID's match up nicely -->
        <delete tableName="EXPERIMENT"/>
        <delete tableName="PROJECT"/>
        <delete tableName="PATHMIND_USER"/>

        <createTable tableName="MODEL">
            <column autoIncrement="true" name="ID" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
              <column name="PROJECT_ID" type="BIGINT">
                <constraints nullable="false" foreignKeyName="PM_FK_MODEL_PROJECT" references="PROJECT(ID)"/>
            </column>
          <column name="NAME" type="VARCHAR(255)" defaultValue="Initial Model Revision">
                <constraints nullable="false"/>
            </column>
            <column name="DATE_CREATED" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_ACTIVITY_DATE" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Since there should be no test data anyways I'll save the time of trying to move it down a layer -->
        <dropForeignKeyConstraint baseTableName="EXPERIMENT" constraintName="PM_FK_EXPERIMENT_PROJECT"/>
        <dropColumn tableName="EXPERIMENT" columnName="PROJECT_ID"/>
        <addColumn tableName="EXPERIMENT">
            <column name="MODEL_ID" type="BIGINT">
                <constraints nullable="false" foreignKeyName="PM_FK_EXPERIMENT_MODEL" references="MODEL(ID)"/>
            </column>
            <column name="NOTES" type="TEXT" defaultValue="">
                <constraints nullable="false"/>
            </column>
        </addColumn>

       <!-- At this point I'm assuming the score is json data -->
        <createTable tableName="RUN">
            <column autoIncrement="true" name="ID" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="EXPERIMENT_ID" type="BIGINT">
                <constraints nullable="false" foreignKeyName="PM_FK_RUN_EXPERIMENT" references="EXPERIMENT(ID)"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="RUN_TYPE" type="INT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="START_DATETIME" type="DATETIME"/>
            <column name="SCORE" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="POLICY">
            <column autoIncrement="true" name="ID" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="RUN_ID" type="BIGINT">
                <constraints nullable="false" foreignKeyName="PM_FK_POLICY_RUN" references="RUN(ID)"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>


